<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<!--
    MaintenanceReportDialog.xml
    Shows maintenance status for OWNED vehicles
    v1.5.1: Redesigned - more compact layout with mechanic's assessment
-->
<GUI onOpen="onOpen" onClose="onClose" onCreate="onCreate">
    <GuiElement profile="newLayer" />
    <Bitmap profile="dialogFullscreenBg" id="dialogBg" />

    <GuiElement profile="dialogBg" id="dialogElement" size="720px 645px">
        <ThreePartBitmap profile="fs25_dialogBgMiddle" />
        <ThreePartBitmap profile="fs25_dialogBgTop" />
        <ThreePartBitmap profile="fs25_dialogBgBottom" />

        <GuiElement profile="fs25_dialogContentContainer">
            <!-- Title -->
            <Text profile="fs25_dialogTitle" id="titleText" position="0px -25px" text="$l10n_usedplus_mrp_title"/>

            <!-- ===== SECTION 1: VEHICLE INFO (compact) ===== -->
            <GuiElement profile="mrSectionVehicle" position="0px -68px">
                <Bitmap profile="mrSectionBgVehicle" position="0px 0px"/>
                <Text profile="mrSectionHeader" position="0px -5px" text="$l10n_usedplus_irp_sectionVehicle"/>

                <!-- Two-column: Image left, Info right -->
                <Bitmap profile="mrVehicleImage" id="vehicleImage" position="-185px 49px"/>
                <Text profile="mrVehicleName" id="vehicleNameText" position="120px -30px" text=""/>
                <Text profile="mrVehicleDetails" id="vehicleDetailsText" position="120px -52px" text=""/>
                <Text profile="mrVehicleOrigin" id="originText" position="120px -74px" text=""/>
            </GuiElement>

            <!-- ===== SECTION 2: MECHANICAL STATUS ===== -->
            <GuiElement profile="mrSectionMech" position="0px -183px">
                <Bitmap profile="mrSectionBgMech" position="0px 0px"/>
                <Text profile="mrSectionHeader" position="0px -5px" text="$l10n_usedplus_mrp_sectionMechanical"/>

                <!-- Left: Component ratings -->
                <Text profile="mrLabel" position="-270px -30px" text="$l10n_usedplus_irp_engine"/>
                <Text profile="mrValue" id="engineRatingText" position="-180px -30px" text=""/>
                <Text profile="mrStatus" id="engineStatusText" position="-100px -30px" text=""/>

                <Text profile="mrLabel" position="-270px -52px" text="$l10n_usedplus_irp_hydraulics"/>
                <Text profile="mrValue" id="hydraulicRatingText" position="-180px -52px" text=""/>
                <Text profile="mrStatus" id="hydraulicStatusText" position="-100px -52px" text=""/>

                <Text profile="mrLabel" position="-270px -74px" text="$l10n_usedplus_irp_electrical"/>
                <Text profile="mrValue" id="electricalRatingText" position="-180px -74px" text=""/>
                <Text profile="mrStatus" id="electricalStatusText" position="-100px -74px" text=""/>

                <!-- Right: Overall & Condition -->
                <Text profile="mrLabel" position="100px -30px" text="$l10n_usedplus_mrp_overall"/>
                <Text profile="mrOverall" id="overallRatingText" position="220px -30px" text=""/>

                <Text profile="mrLabel" position="100px -52px" text="$l10n_usedplus_mrp_condition"/>
                <Text profile="mrCondition" id="conditionText" position="220px -52px" text=""/>

                <Text profile="mrLabel" position="100px -74px" text="$l10n_usedplus_mrp_resaleImpact"/>
                <Text profile="mrResale" id="resaleImpactText" position="220px -74px" text=""/>
            </GuiElement>

            <!-- ===== SECTION 3: MECHANIC'S ASSESSMENT (NEW) ===== -->
            <GuiElement profile="mrSectionQuote" position="0px -303px">
                <Bitmap profile="mrSectionBgQuote" position="0px 0px"/>
                <Text profile="mrSectionHeader" position="0px -5px" text="$l10n_usedplus_irp_sectionMechanic"/>

                <Text profile="mrQuoteText" id="mechanicQuoteText" position="0px -32px" text=""/>
            </GuiElement>

            <!-- ===== SECTION 4: SERVICE HISTORY (compact) ===== -->
            <GuiElement profile="mrSectionHistory" position="0px -368px">
                <Bitmap profile="mrSectionBgHistory" position="0px 0px"/>
                <Text profile="mrSectionHeader" position="0px -5px" text="$l10n_usedplus_mrp_sectionService"/>

                <!-- Single row, 4 columns -->
                <Text profile="mrHistLabel" position="-250px -32px" text="$l10n_usedplus_mrp_breakdowns"/>
                <Text profile="mrHistValue" id="breakdownsText" position="-250px -50px" text="0"/>

                <Text profile="mrHistLabel" position="-90px -32px" text="$l10n_usedplus_mrp_shopRepairs"/>
                <Text profile="mrHistValue" id="repairsText" position="-90px -50px" text="0"/>

                <Text profile="mrHistLabel" position="70px -32px" text="$l10n_usedplus_mrp_inspected"/>
                <Text profile="mrHistValue" id="inspectedText" position="70px -50px" text=""/>

                <Text profile="mrHistLabel" position="230px -32px" text="$l10n_usedplus_mrp_hours"/>
                <Text profile="mrHistValue" id="hoursText" position="230px -50px" text="0"/>
            </GuiElement>

            <!-- ===== SECTION 5: STATUS NOTES ===== -->
            <GuiElement profile="mrSectionNotes" position="0px -458px">
                <Bitmap profile="mrSectionBgNotes" position="0px 0px"/>
                <Text profile="mrSectionHeader" position="0px -5px" text="$l10n_usedplus_mrp_sectionStatus"/>

                <Text profile="mrNotesText" id="notesText" position="0px -32px" text=""/>
                <Text profile="mrNotesText2" id="notesText2" position="0px -50px" text=""/>
            </GuiElement>

        </GuiElement>

        <!-- Button Box -->
        <BoxLayout profile="fs25_dialogButtonBox">
            <Button id="closeButton" profile="buttonBack" text="$l10n_button_close" onClick="onClickClose"/>
        </BoxLayout>
    </GuiElement>

    <GUIProfiles>
        <!-- ========== SECTION CONTAINERS ========== -->
        <Profile name="mrSectionVehicle" extends="emptyPanel" with="anchorTopCenter">
            <size value="660px 105px"/>
        </Profile>

        <Profile name="mrSectionMech" extends="emptyPanel" with="anchorTopCenter">
            <size value="660px 105px"/>
        </Profile>

        <Profile name="mrSectionQuote" extends="emptyPanel" with="anchorTopCenter">
            <size value="660px 55px"/>
        </Profile>

        <Profile name="mrSectionHistory" extends="emptyPanel" with="anchorTopCenter">
            <size value="660px 80px"/>
        </Profile>

        <Profile name="mrSectionNotes" extends="emptyPanel" with="anchorTopCenter">
            <size value="660px 70px"/>
        </Profile>

        <!-- ========== SECTION BACKGROUNDS ========== -->
        <Profile name="mrSectionBgVehicle" extends="baseReference" with="anchorTopCenter">
            <size value="660px 105px"/>
            <imageColor value="0.08 0.08 0.12 0.9"/>
        </Profile>

        <Profile name="mrSectionBgMech" extends="baseReference" with="anchorTopCenter">
            <size value="660px 105px"/>
            <imageColor value="0.08 0.08 0.12 0.9"/>
        </Profile>

        <Profile name="mrSectionBgQuote" extends="baseReference" with="anchorTopCenter">
            <size value="660px 55px"/>
            <imageColor value="0.06 0.08 0.10 0.9"/>
        </Profile>

        <Profile name="mrSectionBgHistory" extends="baseReference" with="anchorTopCenter">
            <size value="660px 80px"/>
            <imageColor value="0.08 0.10 0.08 0.9"/>
        </Profile>

        <Profile name="mrSectionBgNotes" extends="baseReference" with="anchorTopCenter">
            <size value="660px 70px"/>
            <imageColor value="0.10 0.08 0.06 0.9"/>
        </Profile>

        <!-- ========== SECTION HEADER ========== -->
        <Profile name="mrSectionHeader" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="640px 22px"/>
            <textSize value="12px"/>
            <textBold value="true"/>
            <textColor value="1 0.8 0.2 1"/>
            <textAlignment value="center"/>
        </Profile>

        <!-- ========== VEHICLE IMAGE ========== -->
        <Profile name="mrVehicleImage" extends="fs25_vehiclesDetailsImage" with="anchorTopCenter">
            <size value="210px 140px"/>
        </Profile>

        <Profile name="mrVehicleName" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="300px 20px"/>
            <textSize value="15px"/>
            <textBold value="true"/>
            <textColor value="1 1 1 1"/>
        </Profile>

        <Profile name="mrVehicleDetails" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="300px 18px"/>
            <textSize value="12px"/>
            <textColor value="0.7 0.7 0.7 1"/>
        </Profile>

        <Profile name="mrVehicleOrigin" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="300px 18px"/>
            <textSize value="12px"/>
            <textColor value="0.5 0.85 1 1"/>
        </Profile>

        <!-- ========== MECHANICAL VALUES ========== -->
        <Profile name="mrLabel" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="90px 18px"/>
            <textSize value="12px"/>
            <textColor value="0.6 0.6 0.6 1"/>
        </Profile>

        <Profile name="mrValue" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="50px 18px"/>
            <textSize value="13px"/>
            <textBold value="true"/>
            <textColor value="1 1 1 1"/>
        </Profile>

        <Profile name="mrStatus" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="90px 18px"/>
            <textSize value="12px"/>
            <textBold value="true"/>
            <textColor value="0.4 1 0.5 1"/>
        </Profile>

        <Profile name="mrOverall" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="80px 18px"/>
            <textSize value="15px"/>
            <textBold value="true"/>
            <textColor value="1 0.85 0.2 1"/>
        </Profile>

        <Profile name="mrCondition" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="100px 18px"/>
            <textSize value="13px"/>
            <textBold value="true"/>
            <textColor value="0.4 1 0.5 1"/>
        </Profile>

        <Profile name="mrResale" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="80px 18px"/>
            <textSize value="13px"/>
            <textBold value="true"/>
            <textColor value="0.5 0.8 1 1"/>
        </Profile>

        <!-- ========== MECHANIC QUOTE ========== -->
        <Profile name="mrQuoteText" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="600px 20px"/>
            <textSize value="13px"/>
            <textItalic value="true"/>
            <textColor value="0.9 0.9 0.8 1"/>
            <textAlignment value="center"/>
        </Profile>

        <!-- ========== HISTORY VALUES ========== -->
        <Profile name="mrHistLabel" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="100px 16px"/>
            <textSize value="11px"/>
            <textColor value="0.6 0.6 0.6 1"/>
            <textAlignment value="center"/>
        </Profile>

        <Profile name="mrHistValue" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="100px 18px"/>
            <textSize value="14px"/>
            <textBold value="true"/>
            <textColor value="0.9 0.9 0.9 1"/>
            <textAlignment value="center"/>
        </Profile>

        <!-- ========== NOTES ========== -->
        <Profile name="mrNotesText" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="620px 16px"/>
            <textSize value="12px"/>
            <textColor value="0.8 0.8 0.8 1"/>
            <textAlignment value="center"/>
        </Profile>

        <Profile name="mrNotesText2" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="620px 16px"/>
            <textSize value="11px"/>
            <textColor value="0.6 0.6 0.6 1"/>
            <textAlignment value="center"/>
        </Profile>
    </GUIProfiles>
</GUI>

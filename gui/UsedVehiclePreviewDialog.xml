<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<!--
    UsedVehiclePreviewDialog.xml
    Preview dialog for used vehicles with option to inspect or buy as-is
    Shows visible stats but warns about hidden mechanical condition
    v1.4.0: Redesigned to match InspectionReportDialog styling
-->
<GUI onOpen="onOpen" onClose="onClose" onCreate="onCreate">
    <GuiElement profile="newLayer" />
    <Bitmap profile="dialogFullscreenBg" id="dialogBg" />

    <GuiElement profile="dialogBg" id="dialogElement" size="720px 520px">
        <ThreePartBitmap profile="fs25_dialogBgMiddle" />
        <ThreePartBitmap profile="fs25_dialogBgTop" />
        <ThreePartBitmap profile="fs25_dialogBgBottom" />

        <GuiElement profile="fs25_dialogContentContainer">
            <!-- Title -->
            <Text profile="uvpTitle" id="titleText" position="0px -25px" text="$l10n_usedplus_uvp_title"/>

            <!-- ========== SECTION 1: Vehicle Info ========== -->
            <GuiElement profile="uvpSectionContainer" position="0px -60px">
                <Bitmap profile="uvpSectionBg" position="0px 0px"/>
                <Text profile="uvpSectionHeader" position="0px -5px" text="$l10n_usedplus_uvp_sectionVehicle"/>

                <!-- Two-column layout: Image left, Info right -->
                <GuiElement position="0px -28px">
                    <!-- Vehicle Image (left) - Standard position -185px 42px -->
                    <Bitmap profile="uvpVehicleImage" id="vehicleImage" position="-185px 75px"/>

                    <!-- Vehicle Info (right) -->
                    <Text profile="uvpVehicleName" id="vehicleNameText" position="120px -5px" text=""/>

                    <!-- Price info with label - moved left 50px for better centering -->
                    <Text profile="uvpLabel" position="70px -35px" text="$l10n_usedplus_uvp_askingPrice"/>
                    <Text profile="uvpPriceValue" id="priceText" position="180px -35px" text="$0"/>
                </GuiElement>
            </GuiElement>

            <!-- ========== SECTION 2: Visible Condition ========== -->
            <GuiElement profile="uvpSectionContainerTall" position="0px -195px">
                <Bitmap profile="uvpSectionBgTall" position="0px 0px"/>
                <Text profile="uvpSectionHeader" position="0px -5px" text="$l10n_usedplus_uvp_sectionCondition"/>

                <!-- Left column -->
                <Text profile="uvpConditionLabel" position="-250px -32px" text="$l10n_usedplus_uvp_age"/>
                <Text profile="uvpConditionValue" id="ageText" position="-150px -32px" text=""/>

                <Text profile="uvpConditionLabel" position="-250px -55px" text="$l10n_usedplus_uvp_hours"/>
                <Text profile="uvpConditionValue" id="hoursText" position="-150px -55px" text=""/>

                <!-- Right column - shifted left to prevent value cutoff -->
                <Text profile="uvpConditionLabel" position="50px -32px" text="$l10n_usedplus_uvp_damage"/>
                <Text profile="uvpConditionValue" id="damageText" position="150px -32px" text=""/>

                <Text profile="uvpConditionLabel" position="50px -55px" text="$l10n_usedplus_uvp_wear"/>
                <Text profile="uvpConditionValue" id="wearText" position="150px -55px" text=""/>
            </GuiElement>

            <!-- ========== SECTION 3: Warning Box (Not Inspected) ========== -->
            <GuiElement profile="uvpWarningSection" id="warningBg" position="0px -310px">
                <Bitmap profile="uvpWarningBg" position="0px 0px"/>
                <Text profile="uvpWarningIcon" id="warningIcon" position="-280px -28px" text="!"/>
                <Text profile="uvpWarningTitle" id="warningText" position="0px -18px" text="$l10n_usedplus_uvp_warningTitle"/>
                <Text profile="uvpWarningSubtext" id="inspectPrompt" position="0px -45px" text=""/>
            </GuiElement>

            <!-- ========== SECTION 3 ALT: Already Inspected Box (hidden by default) ========== -->
            <GuiElement profile="uvpInspectedSection" id="inspectedSection" position="0px -310px" visible="false">
                <Bitmap profile="uvpInspectedBg" position="0px 0px"/>
                <Text profile="uvpInspectedIcon" position="-280px -28px" text="OK"/>
                <Text profile="uvpInspectedText" id="inspectedText" position="0px -28px" text="$l10n_usedplus_uvp_inspectedText"/>
            </GuiElement>

        </GuiElement>

        <!-- Button Box -->
        <BoxLayout profile="fs25_dialogButtonBox">
            <Button id="buyAsIsButton" profile="buttonOK" text="$l10n_usedplus_button_buyAsIs" onClick="onClickBuyAsIs"/>
            <Bitmap profile="fs25_dialogButtonBoxSeparator"/>
            <Button id="inspectButton" profile="buttonActivate" text="$l10n_usedplus_button_inspect" onClick="onClickInspect"/>
            <Bitmap profile="fs25_dialogButtonBoxSeparator"/>
            <Button id="cancelButton" profile="buttonBack" text="$l10n_button_cancel" onClick="onClickCancel"/>
        </BoxLayout>
    </GuiElement>

    <GUIProfiles>
        <!-- ========== TITLE ========== -->
        <Profile name="uvpTitle" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="600px 30px"/>
            <textSize value="20px"/>
            <textBold value="true"/>
            <textColor value="0.5 0.8 1 1"/>
            <textAlignment value="center"/>
        </Profile>

        <!-- ========== SECTION CONTAINERS ========== -->
        <Profile name="uvpSectionContainer" extends="emptyPanel" with="anchorTopCenter">
            <size value="660px 120px"/>
        </Profile>

        <Profile name="uvpSectionContainerTall" extends="emptyPanel" with="anchorTopCenter">
            <size value="660px 95px"/>
        </Profile>

        <Profile name="uvpWarningSection" extends="emptyPanel" with="anchorTopCenter">
            <size value="660px 75px"/>
        </Profile>

        <Profile name="uvpInspectedSection" extends="emptyPanel" with="anchorTopCenter">
            <size value="660px 75px"/>
        </Profile>

        <!-- ========== SECTION BACKGROUNDS ========== -->
        <Profile name="uvpSectionBg" extends="baseReference" with="anchorTopCenter">
            <size value="660px 120px"/>
            <imageColor value="0.08 0.08 0.12 0.9"/>
        </Profile>

        <Profile name="uvpSectionBgTall" extends="baseReference" with="anchorTopCenter">
            <size value="660px 95px"/>
            <imageColor value="0.08 0.08 0.12 0.9"/>
        </Profile>

        <Profile name="uvpWarningBg" extends="baseReference" with="anchorTopCenter">
            <size value="660px 75px"/>
            <imageColor value="0.18 0.10 0.06 0.95"/>
        </Profile>

        <Profile name="uvpInspectedBg" extends="baseReference" with="anchorTopCenter">
            <size value="660px 75px"/>
            <imageColor value="0.06 0.14 0.10 0.95"/>
        </Profile>

        <!-- ========== SECTION HEADER ========== -->
        <Profile name="uvpSectionHeader" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="640px 22px"/>
            <textSize value="14px"/>
            <textBold value="true"/>
            <textColor value="1 0.8 0.2 1"/>
            <textAlignment value="center"/>
        </Profile>

        <!-- ========== VEHICLE INFO ========== -->
        <!-- Following RVB pattern: baseReference + square size + noSlice -->
        <Profile name="uvpVehicleImage" extends="baseReference" with="anchorTopCenter">
            <size value="180px 180px"/>
            <imageSliceId value="noSlice"/>
        </Profile>

        <Profile name="uvpVehicleName" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="300px 26px"/>
            <textSize value="18px"/>
            <textBold value="true"/>
            <textColor value="1 1 1 1"/>
            <textAlignment value="left"/>
        </Profile>

        <Profile name="uvpLabel" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="110px 20px"/>
            <textSize value="13px"/>
            <textColor value="0.6 0.6 0.6 1"/>
            <textAlignment value="left"/>
        </Profile>

        <Profile name="uvpPriceValue" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="150px 22px"/>
            <textSize value="18px"/>
            <textBold value="true"/>
            <textColor value="0.3 1 0.4 1"/>
            <textAlignment value="left"/>
        </Profile>

        <!-- ========== CONDITION DISPLAY ========== -->
        <Profile name="uvpConditionLabel" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="100px 20px"/>
            <textSize value="13px"/>
            <textColor value="0.6 0.6 0.6 1"/>
            <textAlignment value="left"/>
        </Profile>

        <Profile name="uvpConditionValue" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="180px 20px"/>
            <textSize value="14px"/>
            <textBold value="true"/>
            <textColor value="1 1 1 1"/>
            <textAlignment value="left"/>
        </Profile>

        <!-- ========== WARNING SECTION ========== -->
        <Profile name="uvpWarningIcon" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="40px 40px"/>
            <textSize value="28px"/>
            <textBold value="true"/>
            <textColor value="1 0.6 0.2 1"/>
            <textAlignment value="center"/>
        </Profile>

        <Profile name="uvpWarningTitle" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="500px 22px"/>
            <textSize value="15px"/>
            <textBold value="true"/>
            <textColor value="1 0.75 0.3 1"/>
            <textAlignment value="center"/>
        </Profile>

        <Profile name="uvpWarningSubtext" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="500px 20px"/>
            <textSize value="12px"/>
            <textColor value="0.85 0.85 0.85 1"/>
            <textAlignment value="center"/>
        </Profile>

        <!-- ========== INSPECTED SECTION ========== -->
        <Profile name="uvpInspectedIcon" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="50px 40px"/>
            <textSize value="20px"/>
            <textBold value="true"/>
            <textColor value="0.3 1 0.5 1"/>
            <textAlignment value="center"/>
        </Profile>

        <Profile name="uvpInspectedText" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="500px 22px"/>
            <textSize value="14px"/>
            <textColor value="0.7 1 0.8 1"/>
            <textAlignment value="center"/>
        </Profile>
    </GUIProfiles>
</GUI>

        <!-- ========== SYSTEM SELECTION SECTION ========== -->
        <Profile name="fskSystemSection" extends="emptyPanel" with="anchorTopCenter">
            <size value="660px 105px"/>
        </Profile>
        <Profile name="fskSystemBg" extends="baseReference" with="anchorTopCenter">
            <size value="660px 105px"/>
            <imageColor value="0.08 0.08 0.12 0.9"/>
        </Profile>

        <!-- System selection boxes (styled box with invisible click overlay) -->
        <Profile name="fskSystemBox" extends="emptyPanel" with="anchorTopCenter">
            <size value="180px 68px"/>

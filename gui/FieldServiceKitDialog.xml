<!--
    FS25_UsedPlus - Field Service Kit Dialog (OBD Scanner)
    v2.3.0 - Major UX improvements

    Changes:
    - Triple-element button pattern (Bitmap + invisible Button + Text as siblings)
    - Hover effect on diagnosis buttons (background changes color)
    - Removed [A] [B] [C] [D] prefixes from options
    - Redesigned results screen with prominent success/failure banners
    - Color-coded outcome headers (green/orange/red)
    - Shows player's diagnosis vs correct answer when wrong
-->
<GUI onOpen="onOpen" onClose="onClose" onCreate="onCreate">
    <GuiElement profile="newLayer" />
    <Bitmap profile="dialogFullscreenBg" id="dialogBg" />

    <GuiElement profile="dialogBg" id="dialogElement" size="720px 580px">
        <ThreePartBitmap profile="fs25_dialogBgMiddle" />
        <ThreePartBitmap profile="fs25_dialogBgTop" />
        <ThreePartBitmap profile="fs25_dialogBgBottom" />

        <GuiElement profile="fs25_dialogContentContainer">

            <!-- Title -->
            <Text profile="fskTitle" id="dialogTitle" position="0px -25px" text="$l10n_usedplus_fsk_title"/>

            <!-- ========== STEP 1: SYSTEM SELECTION ========== -->
            <GuiElement profile="fskStepContainer" id="systemSelectContainer" position="0px -55px">

                <!-- SECTION: Vehicle Info -->
                <GuiElement profile="fskVehicleSection" position="0px 0px">
                    <Bitmap profile="fskVehicleBg" position="0px 0px"/>
                    <Text profile="fskSectionHeader" position="0px -5px" text="CONNECTED TO"/>
                    <Text profile="fskLabel" position="-180px -28px" text="Vehicle:"/>
                    <Text profile="fskVehicleName" id="vehicleNameText" position="0px -28px" text=""/>
                </GuiElement>

                <!-- SECTION: Scanner Readout (hints for player to deduce failed system) -->
                <GuiElement profile="fskScannerSection" position="0px -55px">
                    <Bitmap profile="fskScannerBg" position="0px 0px"/>
                    <Text profile="fskScannerHeader" position="0px -5px" text="$l10n_usedplus_fsk_scanner_readout"/>
                    <Text profile="fskHintText" id="scannerHint1Text" position="0px -25px" text=""/>
                    <Text profile="fskHintText" id="scannerHint2Text" position="0px -42px" text=""/>
                </GuiElement>

                <!-- SECTION: System Selection -->
                <GuiElement profile="fskSystemSection" position="0px -120px">
                    <Bitmap profile="fskSystemBg" position="0px 0px"/>
                    <Text profile="fskSectionHeader" position="0px -5px" text="SELECT SYSTEM TO DIAGNOSE"/>

                    <!-- ENGINE button (styled box with invisible click overlay) -->
                    <GuiElement profile="fskSystemBox" position="-200px -28px">
                        <Bitmap profile="fskSystemBoxBg" id="engineBg" position="0px 0px"/>
                        <Button profile="fskSystemBtn" id="engineButton" text="" onClick="onEngineClick" position="0px 0px"/>
                        <Text profile="fskSystemLabel" id="engineLabel" position="0px -8px" text="ENGINE"/>
                        <Text profile="fskSystemSub" position="0px -28px" text="$l10n_usedplus_fsk_reliability"/>
                        <Text profile="fskReliabilityValue" id="engineRelText" position="0px -45px" text=""/>
                    </GuiElement>

                    <!-- ELECTRICAL button -->
                    <GuiElement profile="fskSystemBox" position="0px -28px">
                        <Bitmap profile="fskSystemBoxBg" id="electricalBg" position="0px 0px"/>
                        <Button profile="fskSystemBtn" id="electricalButton" text="" onClick="onElectricalClick" position="0px 0px"/>
                        <Text profile="fskSystemLabel" id="electricalLabel" position="0px -8px" text="ELECTRICAL"/>
                        <Text profile="fskSystemSub" position="0px -28px" text="$l10n_usedplus_fsk_reliability"/>
                        <Text profile="fskReliabilityValue" id="electricalRelText" position="0px -45px" text=""/>
                    </GuiElement>

                    <!-- HYDRAULIC button -->
                    <GuiElement profile="fskSystemBox" position="200px -28px">
                        <Bitmap profile="fskSystemBoxBg" id="hydraulicBg" position="0px 0px"/>
                        <Button profile="fskSystemBtn" id="hydraulicButton" text="" onClick="onHydraulicClick" position="0px 0px"/>
                        <Text profile="fskSystemLabel" id="hydraulicLabel" position="0px -8px" text="HYDRAULIC"/>
                        <Text profile="fskSystemSub" position="0px -28px" text="$l10n_usedplus_fsk_reliability"/>
                        <Text profile="fskReliabilityValue" id="hydraulicRelText" position="0px -45px" text=""/>
                    </GuiElement>
                </GuiElement>

                <!-- SECTION: RVB Details (only shown when RVB installed) -->
                <GuiElement profile="fskRVBSection" id="rvbDetailContainer" position="0px -235px" visible="false">
                    <Bitmap profile="fskRVBBg" position="0px 0px"/>
                    <Text profile="fskSectionHeader" position="0px -5px" text="RVB PART STATUS"/>
                    <Text profile="fskSmallLabel" position="-250px -25px" text="Engine:"/>
                    <Text profile="fskSmallValue" id="rvbEngineText" position="-180px -25px" text=""/>
                    <Text profile="fskSmallLabel" position="-80px -25px" text="Thermo:"/>
                    <Text profile="fskSmallValue" id="rvbThermostatText" position="-20px -25px" text=""/>
                    <Text profile="fskSmallLabel" position="80px -25px" text="Battery:"/>
                    <Text profile="fskSmallValue" id="rvbBatteryText" position="140px -25px" text=""/>
                    <Text profile="fskSmallLabel" position="-250px -42px" text="Generator:"/>
                    <Text profile="fskSmallValue" id="rvbGeneratorText" position="-170px -42px" text=""/>
                    <Text profile="fskSmallLabel" position="-80px -42px" text="Starter:"/>
                    <Text profile="fskSmallValue" id="rvbStarterText" position="-20px -42px" text=""/>
                    <Text profile="fskSmallLabel" position="80px -42px" text="GlowPlug:"/>
                    <Text profile="fskSmallValue" id="rvbGlowPlugText" position="150px -42px" text=""/>
                    <Text profile="fskFaultLabel" position="220px -42px" text="Faults:"/>
                    <Text profile="fskFaultValue" id="rvbFaultCountText" position="275px -42px" text=""/>
                </GuiElement>

                <!-- SECTION: UYT Tire Status (only shown when UYT installed) -->
                <GuiElement profile="fskUYTSection" id="uytTireContainer" position="0px -305px" visible="false">
                    <Bitmap profile="fskUYTBg" position="0px 0px"/>
                    <Text profile="fskSectionHeader" position="0px -5px" text="TIRE WEAR (UYT)"/>
                    <Text profile="fskSmallLabel" position="-250px -25px" text="FL:"/>
                    <Text profile="fskSmallValue" id="uytTireFLText" position="-220px -25px" text=""/>
                    <Text profile="fskSmallLabel" position="-140px -25px" text="FR:"/>
                    <Text profile="fskSmallValue" id="uytTireFRText" position="-110px -25px" text=""/>
                    <Text profile="fskSmallLabel" position="-30px -25px" text="RL:"/>
                    <Text profile="fskSmallValue" id="uytTireRLText" position="0px -25px" text=""/>
                    <Text profile="fskSmallLabel" position="80px -25px" text="RR:"/>
                    <Text profile="fskSmallValue" id="uytTireRRText" position="110px -25px" text=""/>
                    <Text profile="fskSmallLabel" position="180px -25px" text="Worst:"/>
                    <Text profile="fskSmallValue" id="uytWorstTireText" position="230px -25px" text=""/>
                </GuiElement>

                <!-- Tire repair button -->
                <GuiElement profile="fskTireBox" id="tireButton" position="0px -355px" visible="false">
                    <Bitmap profile="fskTireBoxBg" id="tireBg" position="0px 0px"/>
                    <Button profile="fskTireBtn" id="tireBtn" text="" onClick="onTireClick" position="0px 0px"/>
                    <Text profile="fskTireLabel" position="0px -8px" text="$l10n_usedplus_fsk_tire_repair"/>
                </GuiElement>

                <!-- Warning text -->
                <Text profile="fskWarningText" id="warningText" position="0px -390px" text="$l10n_usedplus_fsk_warning_choose"/>
            </GuiElement>

            <!-- ========== STEP 2: DIAGNOSIS ========== -->
            <GuiElement profile="fskStepContainer" id="diagnosisContainer" position="0px -55px" visible="false">

                <!-- System name header -->
                <Text profile="fskSystemName" id="systemNameText" position="0px 0px" text=""/>

                <!-- SECTION: Symptoms -->
                <GuiElement profile="fskSymptomsSection" position="0px -30px">
                    <Bitmap profile="fskSymptomsBg" position="0px 0px"/>
                    <Text profile="fskSectionHeader" position="0px -5px" text="$l10n_usedplus_fsk_symptoms_observed"/>
                    <Text profile="fskSymptomText" id="symptom1Text" position="0px -28px" text=""/>
                    <Text profile="fskSymptomText" id="symptom2Text" position="0px -46px" text=""/>
                    <Text profile="fskSymptomText" id="symptom3Text" position="0px -64px" text=""/>
                </GuiElement>

                <!-- Diagnosis question -->
                <Text profile="fskInstruction" position="0px -120px" text="$l10n_usedplus_fsk_diagnosis_question"/>

                <!-- Diagnosis option buttons (triple-element pattern: Bitmap + invisible Button + Text) -->
                <!-- Button 1 -->
                <Bitmap profile="fskDiagBtnBg" id="diagBtn1Bg" position="0px -150px"/>
                <Button profile="fskDiagBtnHit" id="diagBtn1" text="" onClick="onDiagnosis1Click" onHighlight="onDiagBtnHighlight" onHighlightRemove="onDiagBtnUnhighlight" position="0px -150px"/>
                <Text profile="fskDiagBtnText" id="diagButton1" position="0px -160px" text=""/>

                <!-- Button 2 -->
                <Bitmap profile="fskDiagBtnBg" id="diagBtn2Bg" position="0px -195px"/>
                <Button profile="fskDiagBtnHit" id="diagBtn2" text="" onClick="onDiagnosis2Click" onHighlight="onDiagBtnHighlight" onHighlightRemove="onDiagBtnUnhighlight" position="0px -195px"/>
                <Text profile="fskDiagBtnText" id="diagButton2" position="0px -205px" text=""/>

                <!-- Button 3 -->
                <Bitmap profile="fskDiagBtnBg" id="diagBtn3Bg" position="0px -240px"/>
                <Button profile="fskDiagBtnHit" id="diagBtn3" text="" onClick="onDiagnosis3Click" onHighlight="onDiagBtnHighlight" onHighlightRemove="onDiagBtnUnhighlight" position="0px -240px"/>
                <Text profile="fskDiagBtnText" id="diagButton3" position="0px -250px" text=""/>

                <!-- Button 4 -->
                <Bitmap profile="fskDiagBtnBg" id="diagBtn4Bg" position="0px -285px"/>
                <Button profile="fskDiagBtnHit" id="diagBtn4" text="" onClick="onDiagnosis4Click" onHighlight="onDiagBtnHighlight" onHighlightRemove="onDiagBtnUnhighlight" position="0px -285px"/>
                <Text profile="fskDiagBtnText" id="diagButton4" position="0px -295px" text=""/>
            </GuiElement>

            <!-- ========== STEP 3: RESULTS ========== -->
            <GuiElement profile="fskStepContainer" id="resultsContainer" position="0px -55px" visible="false">

                <!-- SECTION: Outcome Header (Success/Failure banner) -->
                <GuiElement profile="fskOutcomeSection" position="0px 0px">
                    <Bitmap profile="fskOutcomeBg" id="outcomeBg" position="0px 0px"/>
                    <Text profile="fskOutcomeIcon" id="outcomeIcon" position="-280px -22px" text=""/>
                    <Text profile="fskOutcomeTitle" id="resultTitleText" position="0px -15px" text=""/>
                    <Text profile="fskOutcomeSubtitle" id="resultMessageText" position="0px -42px" text=""/>
                </GuiElement>

                <!-- SECTION: Diagnosis Details -->
                <GuiElement profile="fskDiagDetailSection" position="0px -80px">
                    <Bitmap profile="fskDiagDetailBg" position="0px 0px"/>
                    <Text profile="fskDiagDetailLabel" position="-200px -12px" text="Your diagnosis:"/>
                    <Text profile="fskDiagDetailValue" id="playerDiagnosisText" position="50px -12px" text=""/>
                    <Text profile="fskDiagDetailLabel" id="correctDiagLabel" position="-200px -35px" text="Correct answer:" visible="false"/>
                    <Text profile="fskCorrectAnswer" id="correctDiagnosisText" position="50px -35px" text="" visible="false"/>
                </GuiElement>

                <!-- SECTION: Reliability Improvement -->
                <GuiElement profile="fskReliabilitySection" position="0px -145px">
                    <Bitmap profile="fskReliabilityBg" position="0px 0px"/>
                    <Text profile="fskSectionHeader" id="reliabilityHeader" position="0px -5px" text="RELIABILITY RESTORED"/>

                    <!-- Big before/after display -->
                    <Text profile="fskRelBigLabel" position="-180px -35px" text="Before:"/>
                    <Text profile="fskRelBigValue" id="beforeRelText" position="-100px -35px" text=""/>
                    <Text profile="fskRelArrow" position="0px -35px" text="→"/>
                    <Text profile="fskRelBigLabel" position="80px -35px" text="After:"/>
                    <Text profile="fskRelBigValueGreen" id="afterRelText" position="160px -35px" text=""/>
                    <Text profile="fskBoostBig" id="boostText" position="260px -35px" text=""/>
                </GuiElement>

                <!-- SECTION: Temporary Repair Warning -->
                <GuiElement profile="fskTempWarningSection" position="0px -220px">
                    <Bitmap profile="fskTempWarningBg" position="0px 0px"/>
                    <Text profile="fskTempWarningIcon" position="-290px -18px" text="⚠"/>
                    <Text profile="fskTempWarningTitle" position="0px -10px" text="TEMPORARY REPAIR"/>
                    <Text profile="fskTempWarningDesc" position="0px -32px" text="Field repair only - visit workshop for permanent fix"/>
                </GuiElement>

                <!-- Kit consumed note -->
                <Text profile="fskConsumedText" position="0px -280px" text="$l10n_usedplus_fsk_kit_consumed"/>
            </GuiElement>

            <!-- ========== STEP 4: TIRE REPAIR ========== -->
            <GuiElement profile="fskStepContainer" id="tireRepairContainer" position="0px -55px" visible="false">

                <Text profile="fskSystemName" position="0px 0px" text="$l10n_usedplus_fsk_tire_repair_title"/>
                <Text profile="fskInstruction" position="0px -28px" text="$l10n_usedplus_fsk_tire_choose"/>

                <!-- Patch option (triple-element pattern) -->
                <Bitmap profile="fskTireBtnBg" id="patchBtnBg" position="-160px -70px"/>
                <Button profile="fskTireBtnHit" id="patchButton" text="" onClick="onTirePatchClick" position="-160px -70px"/>
                <Text profile="fskTireOptionTitle" position="-160px -90px" text="$l10n_usedplus_fsk_tire_patch"/>
                <Text profile="fskTireOptionDesc" position="-160px -115px" text="$l10n_usedplus_fsk_tire_patch_desc"/>
                <Text profile="fskTireOptionResult" position="-160px -140px" text="$l10n_usedplus_fsk_tire_patch_result"/>

                <!-- Plug option (triple-element pattern) -->
                <Bitmap profile="fskTireBtnBg" id="plugBtnBg" position="160px -70px"/>
                <Button profile="fskTireBtnHit" id="plugButton" text="" onClick="onTirePlugClick" position="160px -70px"/>
                <Text profile="fskTireOptionTitle" position="160px -90px" text="$l10n_usedplus_fsk_tire_plug"/>
                <Text profile="fskTireOptionDesc" position="160px -115px" text="$l10n_usedplus_fsk_tire_plug_desc"/>
                <Text profile="fskTireOptionResult" position="160px -140px" text="$l10n_usedplus_fsk_tire_plug_result"/>
            </GuiElement>

        </GuiElement>

        <!-- Button Box -->
        <BoxLayout profile="fs25_dialogButtonBox">
            <Button profile="buttonOK" id="okButton" text="$l10n_button_ok" onClick="onOkClick" visible="false"/>
            <Bitmap profile="fs25_dialogButtonBoxSeparator"/>
            <Button profile="buttonBack" id="cancelButton" text="$l10n_button_cancel" onClick="onCancelClick"/>
        </BoxLayout>

    </GuiElement>

    <GUIProfiles>
        <!-- ========== TITLE ========== -->
        <Profile name="fskTitle" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="600px 28px"/>
            <textSize value="18px"/>
            <textBold value="true"/>
            <textColor value="0.5 0.8 1 1"/>
            <textAlignment value="center"/>
        </Profile>

        <!-- ========== STEP CONTAINER ========== -->
        <Profile name="fskStepContainer" extends="emptyPanel" with="anchorTopCenter">
            <size value="660px 420px"/>
        </Profile>


<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<GUI onOpen="onOpen" onClose="onClose" onCreate="onCreate">
    <GuiElement profile="newLayer" />
    <Bitmap profile="dialogFullscreenBg" id="dialogBg" />

    <GuiElement profile="dialogBg" id="dialogElement" size="720px 560px">
        <ThreePartBitmap profile="fs25_dialogBgMiddle" />
        <ThreePartBitmap profile="fs25_dialogBgTop" />
        <ThreePartBitmap profile="fs25_dialogBgBottom" />

        <GuiElement profile="fs25_dialogContentContainer">

            <!-- Title -->
            <Text profile="fs25_dialogTitle" id="dialogTitleElement" position="0px -30px" text="$l10n_usedplus_sld_title"/>

            <!-- ===== VEHICLE INFO SECTION ===== -->
            <!-- Height: 100px (increased 15px for better layout) -->
            <GuiElement profile="sldVehicleContainer" position="0px -65px">
                <Bitmap profile="sldVehicleBg" position="0px 0px"/>
                <Text profile="sldSectionHeader" position="0px -5px" text="$l10n_usedplus_sld_sectionVehicle"/>

                <!-- Vehicle Name -->
                <Text profile="sldVehicleName" id="vehicleNameText" position="0px -28px" text=""/>

                <!-- Condition and Hours row -->
                <Text profile="sldLabel" position="-200px -55px" text="$l10n_usedplus_sld_condition"/>
                <Text profile="sldConditionValue" id="conditionText" position="-100px -55px" text=""/>
                <Text profile="sldLabel" position="50px -55px" text="$l10n_usedplus_sld_hours"/>
                <Text profile="sldValue" id="hoursText" position="130px -55px" text=""/>

                <!-- Time remaining and Status row -->
                <Text profile="sldLabel" position="-200px -78px" text="$l10n_usedplus_sld_timeLeft"/>
                <Text profile="sldTimeValue" id="timeRemainingText" position="-100px -78px" text=""/>
                <Text profile="sldLabel" position="50px -78px" text="Status:"/>
                <Text profile="sldStatusValue" id="statusText" position="180px -78px" text=""/>
            </GuiElement>

            <!-- ===== AGENT & PRICE TIERS SECTION ===== -->
            <!-- 10px gap after Vehicle (100px) = -65 - 100 - 10 = -175 -->
            <!-- Height: 95px -->
            <GuiElement profile="sldConfigContainer" position="0px -175px">
                <Bitmap profile="sldConfigBg" position="0px 0px"/>
                <Text profile="sldSectionHeader" position="0px -5px" text="$l10n_usedplus_sld_sectionConfig"/>

                <!-- Left column: Agent Tier -->
                <Text profile="sldLabelBold" position="-220px -28px" text="$l10n_usedplus_sld_agentTier"/>
                <Text profile="sldAgentValue" id="agentTierText" position="-110px -28px" text=""/>

                <Text profile="sldLabel" position="-220px -48px" text="$l10n_usedplus_sld_agentFee"/>
                <Text profile="sldFeeValue" id="agentFeeText" position="-110px -48px" text=""/>

                <Text profile="sldLabel" position="-220px -68px" text="$l10n_usedplus_sld_baseSuccess"/>
                <Text profile="sldValue" id="baseSuccessText" position="-110px -68px" text=""/>

                <!-- Right column: Price Tier -->
                <Text profile="sldLabelBold" position="80px -28px" text="$l10n_usedplus_sld_priceTier"/>
                <Text profile="sldPriceValue" id="priceTierText" position="190px -28px" text=""/>

                <Text profile="sldLabel" position="80px -48px" text="$l10n_usedplus_sld_priceRange"/>
                <Text profile="sldValue" id="priceRangeText" position="190px -48px" text=""/>

                <Text profile="sldLabel" position="80px -68px" text="$l10n_usedplus_sld_successMod"/>
                <Text profile="sldModValue" id="successModText" position="190px -68px" text=""/>
            </GuiElement>

            <!-- ===== PRICING COMPARISON SECTION ===== -->
            <!-- 10px gap after Config (95px) = -175 - 95 - 10 = -280 -->
            <!-- Height: 95px -->
            <GuiElement profile="sldValueContainer" position="0px -280px">
                <Bitmap profile="sldValueBg" position="0px 0px"/>
                <Text profile="sldSectionHeader" position="0px -5px" text="$l10n_usedplus_sld_sectionValue"/>

                <!-- Left column: Baseline Values -->
                <Text profile="sldLabel" position="-220px -28px" text="$l10n_usedplus_sld_vanillaSell"/>
                <Text profile="sldVanillaValue" id="vanillaSellText" position="-100px -28px" text=""/>

                <Text profile="sldLabel" position="-220px -48px" text="$l10n_usedplus_sld_tradeInValue"/>
                <Text profile="sldTradeInValue" id="tradeInValueText" position="-100px -48px" text=""/>

                <Text profile="sldSmallNote" position="-100px -68px" text="$l10n_usedplus_sld_tradeInNote"/>

                <!-- Right column: Expected Values -->
                <Text profile="sldLabelBold" position="80px -28px" text="$l10n_usedplus_sld_expected"/>
                <Text profile="sldExpectedValue" id="expectedValueText" position="210px -28px" text=""/>

                <Text profile="sldLabel" position="80px -48px" text="$l10n_usedplus_sld_vsVanilla"/>
                <Text profile="sldBonusValue" id="bonusVsVanillaText" position="210px -48px" text=""/>

                <Text profile="sldLabel" position="80px -68px" text="$l10n_usedplus_sld_netAfterFee"/>
                <Text profile="sldNetValue" id="netAmountText" position="210px -68px" text=""/>
            </GuiElement>

            <!-- ===== OFFER HISTORY SECTION ===== -->
            <!-- 10px gap after Value (95px) = -280 - 95 - 10 = -385 -->
            <!-- Height: 55px -->
            <GuiElement profile="sldHistoryContainer" position="0px -385px">
                <Bitmap profile="sldHistoryBg" position="0px 0px"/>
                <Text profile="sldSectionHeader" position="0px -5px" text="$l10n_usedplus_sld_sectionOffers"/>

                <Text profile="sldLabel" position="-220px -30px" text="$l10n_usedplus_sld_offersReceived"/>
                <Text profile="sldValue" id="offersReceivedText" position="-100px -30px" text=""/>

                <Text profile="sldLabel" position="-10px -30px" text="$l10n_usedplus_sld_offersDeclined"/>
                <Text profile="sldValue" id="offersDeclinedText" position="110px -30px" text=""/>

                <Text profile="sldLabel" position="180px -30px" text="$l10n_usedplus_sld_listedFor"/>
                <Text profile="sldTimeValue" id="listedDurationText" position="270px -30px" text=""/>
            </GuiElement>

            <!-- Info/Tips text -->
            <!-- 10px gap after History (55px) = -385 - 55 - 10 = -450 -->
            <Text profile="sldInfoText" id="infoText" position="0px -450px" text="$l10n_usedplus_sld_infoText"/>

        </GuiElement>

        <BoxLayout profile="fs25_dialogButtonBox">
            <Button profile="buttonBack" id="closeButton" text="$l10n_button_close" onClick="onCloseDialog"/>
        </BoxLayout>

    </GuiElement>

    <GUIProfiles>
        <!-- ========== SECTION CONTAINERS ========== -->
        <Profile name="sldVehicleContainer" extends="emptyPanel" with="anchorTopCenter">
            <size value="660px 100px"/>
        </Profile>

        <Profile name="sldConfigContainer" extends="emptyPanel" with="anchorTopCenter">
            <size value="660px 95px"/>
        </Profile>

        <Profile name="sldValueContainer" extends="emptyPanel" with="anchorTopCenter">
            <size value="660px 95px"/>
        </Profile>

        <Profile name="sldHistoryContainer" extends="emptyPanel" with="anchorTopCenter">
            <size value="660px 55px"/>
        </Profile>

        <!-- ========== BACKGROUNDS ========== -->
        <Profile name="sldVehicleBg" extends="baseReference" with="anchorTopCenter">
            <size value="660px 100px"/>
            <imageColor value="0.08 0.08 0.12 0.9"/>
        </Profile>

        <Profile name="sldConfigBg" extends="baseReference" with="anchorTopCenter">
            <size value="660px 95px"/>
            <imageColor value="0.1 0.1 0.15 0.9"/>
        </Profile>

        <Profile name="sldValueBg" extends="baseReference" with="anchorTopCenter">
            <size value="660px 95px"/>
            <imageColor value="0.12 0.1 0.06 0.9"/>
        </Profile>

        <Profile name="sldHistoryBg" extends="baseReference" with="anchorTopCenter">
            <size value="660px 55px"/>
            <imageColor value="0.08 0.08 0.12 0.9"/>
        </Profile>

        <!-- ========== SECTION HEADER ========== -->
        <Profile name="sldSectionHeader" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="660px 22px"/>
            <textSize value="14px"/>
            <textBold value="true"/>
            <textColor value="1 0.8 0.2 1"/>
            <textAlignment value="center"/>
        </Profile>

        <!-- ========== LABELS ========== -->
        <Profile name="sldLabel" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="100px 18px"/>
            <textSize value="12px"/>
            <textColor value="0.6 0.6 0.6 1"/>
        </Profile>

        <Profile name="sldLabelBold" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="100px 18px"/>
            <textSize value="12px"/>
            <textBold value="true"/>
            <textColor value="0.7 0.7 0.7 1"/>
        </Profile>

        <!-- ========== VALUES ========== -->
        <Profile name="sldValue" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="130px 18px"/>
            <textSize value="13px"/>
            <textBold value="true"/>
            <textColor value="1 1 1 1"/>
        </Profile>

        <Profile name="sldVehicleName" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="500px 22px"/>
            <textSize value="16px"/>
            <textBold value="true"/>
            <textColor value="0.4 0.85 1 1"/>
            <textAlignment value="center"/>
        </Profile>

        <Profile name="sldConditionValue" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="100px 18px"/>
            <textSize value="13px"/>
            <textBold value="true"/>
            <textColor value="0.3 1 0.4 1"/>
        </Profile>

        <Profile name="sldStatusValue" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="180px 18px"/>
            <textSize value="13px"/>
            <textBold value="true"/>
            <textColor value="0.7 0.7 0.7 1"/>
        </Profile>

        <Profile name="sldTimeValue" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="100px 18px"/>
            <textSize value="13px"/>
            <textBold value="true"/>
            <textColor value="1 0.85 0.2 1"/>
        </Profile>

        <Profile name="sldAgentValue" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="130px 18px"/>
            <textSize value="13px"/>
            <textBold value="true"/>
            <textColor value="0.5 0.85 1 1"/>
        </Profile>

        <Profile name="sldPriceValue" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="130px 18px"/>
            <textSize value="13px"/>
            <textBold value="true"/>
            <textColor value="1 0.7 0.3 1"/>
        </Profile>

        <Profile name="sldFeeValue" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="130px 18px"/>
            <textSize value="13px"/>
            <textBold value="true"/>
            <textColor value="1 0.5 0.4 1"/>
        </Profile>

        <Profile name="sldModValue" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="130px 18px"/>
            <textSize value="13px"/>
            <textBold value="true"/>
            <textColor value="1 1 1 1"/>
        </Profile>

        <Profile name="sldVanillaValue" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="120px 18px"/>
            <textSize value="13px"/>
            <textBold value="true"/>
            <textColor value="0.7 0.7 0.7 1"/>
        </Profile>

        <Profile name="sldTradeInValue" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="120px 18px"/>
            <textSize value="13px"/>
            <textBold value="true"/>
            <textColor value="0.6 0.6 0.6 1"/>
        </Profile>

        <Profile name="sldExpectedValue" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="120px 20px"/>
            <textSize value="16px"/>
            <textBold value="true"/>
            <textColor value="0.3 1 0.4 1"/>
        </Profile>

        <Profile name="sldBonusValue" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="120px 18px"/>
            <textSize value="13px"/>
            <textBold value="true"/>
            <textColor value="0.4 1 0.5 1"/>
        </Profile>

        <Profile name="sldNetValue" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="120px 18px"/>
            <textSize value="14px"/>
            <textBold value="true"/>
            <textColor value="1 0.85 0.2 1"/>
        </Profile>

        <Profile name="sldSmallNote" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="250px 16px"/>
            <textSize value="10px"/>
            <textColor value="0.5 0.5 0.5 1"/>
        </Profile>

        <Profile name="sldInfoText" extends="fs25_textDefault" with="anchorTopCenter">
            <size value="640px 20px"/>
            <textSize value="12px"/>
            <textColor value="0.5 0.8 0.5 1"/>
            <textAlignment value="center"/>
        </Profile>
    </GUIProfiles>
</GUI>
